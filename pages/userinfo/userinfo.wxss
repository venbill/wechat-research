  z-index: 999;  
  width:100%;
  height:100%;
  text-font:24rpi;
  position:absolute;  
}  
.login_form{  
  border-radius:5px;  
  margin-left:30rpx;
  margin-right:30rpx;
  background-color: rgba(255,255,255,0.2);  
}  

.weui-cell {
  display: flex;
    padding: 30rpx 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}


.weui-label{
     flex: 1;
     width:50px;
    font-size: 30rpx;
	letter-spacing: 1px;
    margin-left:10%
}
.weui-input{
    font-size: 30rpx;
	letter-spacing: 1px;
     margin-left:10%
}


.menu_container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.menu_item {
    width: 33%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    box-sizing: border-box;
    padding-bottom: 10px;
    padding-top: 10px;
}
.menu_icon {
    width: 50px;
    height: 50px;
    padding-bottom: 5px;
}



















.ques-wrapper{
	padding: 30rpx;
	margin-bottom: 30rpx;
}
.ques-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
}
.ques-info image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.ques-sec{
	margin-left: 20rpx;
	flex: 1;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.ques-user{
	color: #bbb;
  font-size:14px;

}
.ques-cost{
	color: #f85f48;
}
.ques-content{
	padding: 10rpx 0 30rpx 90rpx;
	font-size: 25rpx;
}
.ans-wrapper{
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	align-items: center;
}
.ans-wrapper image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.ans-voice{
	margin: 0 20rpx 0 40rpx;
	padding: 20rpx 100rpx;
	color: #fff;
	border-radius: 50rpx;
	background-color: #1dcda6;
}
.ans-time{
	color: #ccc;
}
.ans-info{	
	color: #aaa;
	margin-top: 30rpx;
	padding-top: 20rpx;
	border-top: 1px solid #eee;
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
}
.master-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	padding: 30rpx;
	margin-bottom: 30rpx;
}
.master-info image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.master-brief{
	height: 120rpx;
	padding-left: 40rpx;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	align-items: flex-start;
}
.master-user{
	font-size: 30rpx;
	letter-spacing: 1px;
}
.master-intro {
	color: #888;
	width: 300rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.master-fans{
	color: #888;
}
.master-follow{
	color: #ddd;
	width: 80rpx;
	padding: 10rpx;
	border-radius: 50rpx;
	background-color: #999;
	text-align: center;
}




.line-css {

    height: 0.8px;

    background: #CFCFCF;

    margin:  10rpx 20 rpx;

}
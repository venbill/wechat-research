<!--index.wxml-->
<view>
<swiper indicator-dots="{{indicatorDots}}"  
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">  
      <block wx:for="{{imgUrls}}">  
        <swiper-item>  
           <navigator  hover-class="navigator-hover">  
            <image src="{{item.url}}" class="img" />  
           </navigator>   
        </swiper-item>  
      </block>  
</swiper>  
</view>
<view class="menu_container">
    <view class="menu_item" wx:for="{{menus}}" wx:for-index="idx" wx:for-item="menu">
        <image bindtap="toTab" data-link="{{menu.link}}" class="menu_icon" src="{{menu.url}}" />
        <text class="menu_name">{{menu.name}}</text>
    </view>
</view>

<view>
	<view class="ques-wrapper line-css">
		<view class="ques-info">
			<image src="/img/avatar/basicprofile.png"></image>
			<view class="ques-sec">
				<view class="ques-user">中国传统文化教育
</view>
			</view>
		</view>
